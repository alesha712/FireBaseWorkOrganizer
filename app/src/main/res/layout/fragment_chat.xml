<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFabText"

    tools:context="com.hqs.alx.mushalmapp2.ChatFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/messageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        app:reverseLayout="true"
        app:stackFromEnd="true" />

    <LinearLayout
        android:id="@+id/messageSenderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagePickerIV"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_image_24dp" />

        <EditText
            android:id="@+id/messageET"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:hint="@string/WriteMessage"
            android:inputType="textMultiLine|textPersonName"
            android:padding="3dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/sendIV"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_send_24dp" />

    </LinearLayout>

</RelativeLayout>
